<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <br />
        <%= @user.name %>
        <br />
        <%= @user.email %>
        <br />
        <%= @user.area %>
        <br />
        <%= link_to "Following", followings_user_path(@user) %>
        <br />
        <%= link_to "Followers", followers_user_path(@user) %>
        <br />
        <% if logged_in? && current_user != @user %>
        <hr />
        <%= link_to "View my profile / my tweets", current_user %>
        <% end %>
        <br />
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.follower_users.any? %>
      <h3>Followers (<%= @user.follower_users.count %>)</h3>
      <ol class="followings-followers">
        <%= page_entries_info @followerusers %>
        <%= render @followerusers %>
        <%= paginate @followerusers %>
      </ol>
    <% end %>
  </div>
</div>